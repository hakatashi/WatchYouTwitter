{
	"manifest_version": 2,
	"name": "WatchYouTwitter",
	"version": "1",

	"description": "WatchYouTwitter watches you!!!!!!",
	
	"author": "hakatashi",
	"background": {
		"scripts": [
			"third/jquery.js",
			"third/oauth.js",
			"third/sha1.js",
			"third/purl.js",
			"twitter.js",
			"keys.js",
			"gettoken.js",
			"inspect.js"
		],
		"persistent": false
	},
	"permissions": [
		"https://twitter.com/*",
		"https://api.twitter.com/*",
		"storage",
		"tabs",
		"activeTab"
	]
}
